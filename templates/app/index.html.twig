{# templates/index.html.twig #}

{% extends 'base.html.twig' %}
{% block body %}

<h1>Page d'accueil</h1>

<ul>
    {% for article in articles %}
    <h3>Article #{{article.id}}</h3>
        <li>Titre: {{ article.title }} </li>
        <ul>
        <li>Résumé : {{ article.shortContent }} </li>
        <li>Description: {{article.content}}</li>
        </ul>
        <br>
        <br>
    {% endfor %}
</ul>

{% endblock %}