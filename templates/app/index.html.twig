{# templates/index.html.twig #}

{% extends 'base.html.twig' %}
{% block body %}

	<h1>Page d'accueil</h1>

	<form action="{{path("article_searchstring") }}" method="get">
		<input type="text" name="q" id="searchstring">
		<input type="submit" value="Rechercher">
	</form>

	<ul>
		{% for article in articles %}
			<h3>Article #{{article.id}}</h3>
			<li>Titre:
				{{ article.title }}
			</li>
			<ul>
				<li>Résumé :
					{{ article.shortContent }}
				</li>
				<li>Description:
					{{article.content}}</li>
				<li>Créé le :
					{{ article.createdAt | date('d/m/Y') }}</li>
				<li>Catégorie:
					{{ article.category.title |default("") }}</li>
			</ul>
			<br>
			<br>
		{% endfor %}
	</ul>

{% endblock %}
