{# templates/create.html.twig #}

{% extends 'base.html.twig' %}



{% block body %}
<form action="{{path('article_new')}}" method="post">
<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" class="form-control" placeholder="" aria-describedby="helpId">
  <small id="helpId" class="text-muted">Help text</small>
</div>
<div class="form-group">
  <label for="short_content">Résumé</label>
  <input type="text" name="short_content" id="short_content" class="form-control" placeholder="" aria-describedby="helpId">
  <small id="helpId" class="text-muted">Help text</small>
</div>
<div class="form-group">
  <label for="content">Description</label>
  <input type="text" name="content" id="content" class="form-control" placeholder="" aria-describedby="helpId">
  <small id="helpId" class="text-muted">Help text</small>
</div>
<input name="" id="" class="btn btn-primary" type="submit" value="Créer un nouvel article">
</form>
{% endblock %}